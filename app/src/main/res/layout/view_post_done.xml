<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.xda.report.ViewPostDone"
    android:background="#ffffffff">


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:id="@+id/imgv"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <TextView
                android:id="@+id/tvi44"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:background="#971b1b1b"
                android:alpha="0.8"
                android:textColor="#fff"
                android:textSize="19sp"
                android:text="Test"
                android:fontFamily="sans-serif-light"
                android:layout_alignBottom="@+id/imgv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"

        android:layout_below="@+id/tvi44"
        android:layout_above="@+id/doneBut"
        android:id="@+id/gridLayout">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Park Number "
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/textView4"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Park Number"
            android:textSize="14sp"
            android:id="@+id/tvi11"
                />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FFF1F1F1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Plate Number"
            android:textStyle="bold"
            android:id="@+id/textView5"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/tvi22"
            android:fontFamily="sans-serif"
                android:hint="Plate Number"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
                android:id="@+id/tvi33"
                android:hint="Plate Number "
            android:layout_row="3"
            android:layout_column="1" />

        <View
            android:layout_row="4"
            android:layout_column="1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#FFF1F1F1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Done By"
            android:id="@+id/textView9"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="Done By "
            android:id="@+id/doneuser"
            android:layout_row="5"
            android:layout_column="1" />
    </GridLayout>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#2196f3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return"
                android:id="@+id/doneBut"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/expand_icon"
        android:id="@+id/expand_button"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="15dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
