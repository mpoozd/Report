<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.xda.report.Sec"
    >
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="190dp"
    app:layout_collapseMode="pin"
    android:id="@+id/framebar"
    android:background="#607D8B">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@android:color/primary_text_dark"
        android:alpha=".9"
        android:fontFamily="sans-serif-light"
        android:text="تسجيل دخول"
        android:id="@+id/textView3"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal|bottom" />
</android.support.v7.widget.Toolbar>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/framebar"
        android:ems="10"
        android:id="@+id/em"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="البريد الالكتروني"
        android:singleLine="true"
        app:met_errorColor="#FF0000"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#607D8B"
        app:met_iconRight="@mipmap/ic_perm_identity_black_24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pa"
        android:layout_below="@+id/em"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="كلمة المرور"

        android:layout_marginTop="5dp"
        android:singleLine="true"
        app:met_errorColor="#FF0000"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#607D8B"
        app:met_iconRight="@mipmap/ic_lock_outline_black_24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:imeActionId="@+id/edittext_action_login"
        android:imeActionLabel="@string/login"
        android:imeOptions="actionUnspecified"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تسجيل"
        android:id="@+id/but3"
        android:textColor="@android:color/primary_text_dark"
        android:layout_below="@+id/pa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:backgroundTint="#607D8B" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لاتملك حساب؟ "
        android:id="@+id/textView6"
        android:layout_below="@+id/but3"
        android:layout_alignRight="@+id/but3"
        android:layout_alignEnd="@+id/but3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سجل مجاناً"
        android:id="@+id/textView7"
        android:textColor="#ff1f95f1"
        android:layout_below="@+id/but3"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/textView6"
 />


</RelativeLayout>
