<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.xda.report.Sec"
    android:background="@android:color/white">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="190dp"
    app:layout_collapseMode="pin"
    android:id="@+id/framebar"
    android:background="#ff03a9f4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@android:color/primary_text_dark"
        android:alpha=".9"
        android:fontFamily="sans-serif-light"
        android:text="Log In"
        android:id="@+id/textView3"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal|bottom" />
</android.support.v7.widget.Toolbar>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/framebar"
        android:ems="10"
        android:id="@+id/em"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Username"
        android:singleLine="true"
        app:met_errorColor="#FF0000"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#ff03a9f4"
        app:met_iconLeft="@mipmap/ic_perm_identity_black_24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pa"
        android:layout_below="@+id/em"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Password"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        app:met_errorColor="#FF0000"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#ff03a9f4"
        app:met_iconLeft="@mipmap/ic_lock_outline_black_24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:imeActionId="@+id/edittext_action_login"
        android:imeActionLabel="@string/login"
        android:imeOptions="actionUnspecified"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/but3"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/primary_text_dark"
        android:layout_below="@+id/pa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:backgroundTint="#ff03a9f4" />



</RelativeLayout>
