<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.xda.report.Student">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/bulding1"
        android:layout_below="@+id/spnr2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:hint="Bulding Number"
        android:singleLine="true"
        app:met_errorColor="#FF0000"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#ff03a9f4"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/parking1"
        android:layout_below="@+id/bulding1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Parking Number"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        app:met_errorColor="#FF0000"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#ff03a9f4"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/plate1"
        android:layout_below="@+id/parking1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Plate Number"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        app:met_errorColor="#FF0000"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#ff03a9f4"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkimg"
        android:layout_below="@+id/plate1"
        android:layout_marginTop="25dp"
        android:layout_marginRight="180dp" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Uplaod"
        android:textAllCaps="false"
        android:id="@+id/butup"
        android:layout_alignTop="@+id/checkimg"
        android:layout_toRightOf="@+id/checkimg"
        android:layout_toEndOf="@+id/checkimg"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="0dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Submit"
        android:textAllCaps="false"
        android:id="@+id/butsend"
        android:layout_below="@+id/textloc1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"


 />

    <Spinner
        style="?android:attr/spinnerItemStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnr"
        android:layout_marginTop="20dp"
        android:entries="@array/arr1"
        android:layout_toStartOf="@+id/spnr2"
        android:layout_toLeftOf="@+id/spnr2" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnr2"
        android:entries="@array/arr2"
        android:layout_alignTop="@+id/spnr"
        android:layout_alignLeft="@+id/butup"
        android:layout_alignStart="@+id/butup" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select the Area"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
 />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/butlocal"
        android:layout_alignTop="@+id/butup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textloc1"
        android:layout_below="@+id/butup"
        android:layout_alignRight="@+id/inputplate"
        android:layout_alignEnd="@+id/inputplate" />


</RelativeLayout>
