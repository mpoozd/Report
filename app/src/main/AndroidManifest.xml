<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.xda.report" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="app.xda.report.Ppar"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="app.xda.report.Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.xda.report.Student"
            android:label="@string/title_activity_student"
            android:theme="@style/Blank" >
        </activity>
        <activity
            android:name="app.xda.report.Sec"
            android:label="@string/title_activity_sec" >
        </activity>
        <activity
            android:name="app.xda.report.ViewPost"
            android:label="@string/title_activity_view_post" >
        </activity>
        <activity
            android:name="app.xda.report.FragClass"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="app.xda.report.NewUser"
            android:label="@string/title_activity_newuser" >
        </activity>
        <activity
            android:name="app.xda.report.ImageAcv"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="app.xda.report.ViewPostDone"
            android:label="@string/title_activity_view_post_done" >
        </activity>
    </application>

</manifest>
